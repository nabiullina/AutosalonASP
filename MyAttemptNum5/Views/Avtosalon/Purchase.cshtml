@model MultiModel

@{
    ViewData["Title"] = "Purchase";
}
@if (User.Identity.IsAuthenticated)
{

    <h3>Проверьте данные</h3>
    <div>
        <h4>Автомобиль</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ekzemplyar.IdANavigation.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ekzemplyar.IdANavigation.Model)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ekzemplyar.IdANavigation.Color)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ekzemplyar.IdANavigation.Color)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ekzemplyar.KomplektaciyaEkzemplyars)
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @if (Model.Ekzemplyar.KomplektaciyaEkzemplyars is not null)
                    {
                        foreach (var komp in Model.Ekzemplyar.KomplektaciyaEkzemplyars)
                        {
                            <li>
                                @Html.DisplayFor(model => komp.Komplektaciya.NameK)
                                @Html.DisplayFor(model => komp.Komplektaciya.Opisanie)
                            </li>
                        }
                    }
                </ul>
            </dd>
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Buyer.Fio)
            </dd>
        </dl>

        <form asp-action="Purchase" asp-route-VinKod="@Model.Ekzemplyar.VinKod">
            @* <input type="hidden" asp-for="Ekzemplyar.VinKod" /> *@
            <input type="submit" value="submit" class="btn btn-success"/> |
            <a asp-action="SelectEkzemplyar" asp-route-IdA="@Model.Ekzemplyar.IdANavigation.IdA">Вернуться к списку комплектаций</a>
        </form>
    </div>
}
else
{
}