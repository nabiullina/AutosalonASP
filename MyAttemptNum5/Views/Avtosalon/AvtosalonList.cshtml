@{
    ViewData["Title"] = "List";
    Layout = "_Layout";
    int i = 0;
}

<div class="text-body mt-5 mb-2">
    <h1>Модельный ряд</h1>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th></th>
        <th>Модель</th>
        <th>Цена</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var x in Model)
    {
        var image_path = "";
        image_path = @"/Images/" + x.IdA + ".png";
            
        <tr>
            <td>
                <a asp-action="ItemDetails" asp-route-id="@x.IdA">
                    <img src="@image_path" alt="Sample Image" width="400px" />
                </a>
            </td>

            <td>@x.Model</td>
            <td>@x.Price</td>
        </tr>
    }
    </tbody>
</table>

