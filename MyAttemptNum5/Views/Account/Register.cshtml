@model MyAttemptNum5.ViewModels.RegisterModel

<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Регистрация</p>
                            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                                <div class="validation" asp-validation-summary="ModelOnly"></div>
                                <div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Email" class="form-label">Введите Email</label><br />
                                            <input type="text" class="form-control" asp-for="Email" />
                                            <span asp-validation-for="Email" />
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                                
                                            <label asp-for="Password" class="form-label">Введите пароль</label>
                                            <input asp-for="Password" class="form-control"/>
                                            <span asp-validation-for="Password"/>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                                                                    
                                            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label>
                                            <input asp-for="ConfirmPassword" class="form-control"/>
                                            <span asp-validation-for="ConfirmPassword"/>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                                                                    
                                            <label asp-for="Fio" class="form-label">Введите имя</label>
                                            <input asp-for="Fio" class="form-control"/>
                                            <span asp-validation-for="Fio"/>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                                                                    
                                            <label asp-for="PhoneNumber" class="form-label">Введите номер</label>
                                            <input asp-for="PhoneNumber" class="form-control"/>
                                            <span asp-validation-for="PhoneNumber"/>
                                        </div>
                                    </div>
                                    
                                    <div>
                                        <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
                                    </div>
                                </div>
                            </form>
                            
                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                            <img src="/Images//лейбл.png"
                                 class="img-fluid" alt="Sample image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
